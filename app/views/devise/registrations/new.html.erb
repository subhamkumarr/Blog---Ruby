<div class="container">
<div class="col s12 m8 offset-m2 l6 offset-l3">
<div class="card-panel grey lighten-5 z-depth-1">
  <div class="row valign-wrapper">
    <div class="col s12">
      <h4>
        Sign Up
      </h4>
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
              <%= f.text_field :firstname, autofocus: true, type: "text", class: "validate" %>
            <label for="firstname">First Name</label>
          </div>
          <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
              <%= f.text_field :lastname, autofocus: true, type: "text", class: "validate" %>
            <label for="firstname">Last Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <%= f.email_field :email, autofocus: true, type: "text", class: "validate" %>
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">mode_edit</i>
              <%= f.password_field :password, autocomplete: "off", type: "password", class: "validate" %>
            <label for="password">Password</label>
          </div>
        </div> 
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">mode_edit</i>
              <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", class: "validate" %>
            <label for="password">Password Confirmation</label>
          </div>
        </div>  
        <div class="row">
          <div class="input-field col s12">
              <i class="material-icons prefix">reorder</i>
              <%= f.text_area :bio, autofocus: true, type: "text", class: "materialize-textarea" %>
            <label for="email">Bio</label>
          </div>
        </div>       
        <%= f.submit "Sign up", class: "waves-effect waves-light btn" %>    
        <%= link_to 'Back', posts_path, class: "waves-effect waves-light btn" %>
      </form>
      <% end %>      
    </div>
  </div>
</div>
</div>
</div>