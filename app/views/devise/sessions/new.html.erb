<div class="container">
<div class="col s12 m8 offset-m2 l6 offset-l3">
<div class="card-panel grey lighten-5 z-depth-1">
  <div class="row valign-wrapper">
    <div class="col s12">
      <h4>
        Log In
      </h4>
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
              <%= f.email_field :email, autofocus: true, type: "text", class: "validate" %>
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">mode_edit</i>
              <%= f.password_field :password, autocomplete: "off", type: "password", class: "validate" %>
            <label for="password">Password</label>
          </div>
        </div> 
        <%= f.submit "Log In", class: "waves-effect waves-light btn" %>    
        <%= link_to 'Back', posts_path, class: "waves-effect waves-light btn" %>
      </form>
      <% end %>      
    </div>
  </div>
</div>
</div>

<%= render "devise/shared/links" %>
</div>